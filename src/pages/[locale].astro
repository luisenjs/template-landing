---
import es from "../dictionaries/landing-page/es.json";
import en from "../dictionaries/landing-page/en.json";
import Layout from "../layout/layout.astro";
import HeroSection from "./components/hero-section.astro";

export async function getStaticPaths() {
  return [{ params: { locale: "en" } }, { params: { locale: "es" } }];
}

const { locale } = Astro.params;
const dict = locale === "en" ? en : es;
---

<Layout>
  <HeroSection {...dict["hero"]} />
</Layout>
